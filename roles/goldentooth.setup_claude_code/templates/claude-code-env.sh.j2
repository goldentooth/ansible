# Claude Code CLI Environment Configuration
# Generated by Ansible goldentooth.setup_claude_code role
# Source: goldentooth cluster node {{ inventory_hostname }}

# Ensure /usr/local/bin is in PATH for Claude Code wrapper scripts
if [[ ":$PATH:" != *":/usr/local/bin:"* ]]; then
    export PATH="/usr/local/bin:$PATH"
fi

# Claude CLI aliases (removed cc alias to avoid conflict with C compiler)
alias claude='npx --yes @anthropic-ai/claude-code'
alias claude-code='npx --yes @anthropic-ai/claude-code'

# Optional: Set Claude Code environment variables if needed
# export ANTHROPIC_API_KEY="your_api_key_here"  # Users should set this individually

# Helper function for Claude Code usage
claude_help() {
    echo "Claude CLI available on {{ inventory_hostname }} (Goldentooth cluster)"
    echo ""
    echo "Commands:"
    echo "  claude [options] [command]       - Run Claude CLI (short)"
    echo "  claude-code [options] [command]  - Run Claude CLI (full name)"
    echo ""
    echo "Examples:"
    echo "  claude --help                    - Show Claude help"
    echo "  claude chat                      - Start interactive chat"
    echo "  claude --version                 - Show Claude version"
    echo ""
    echo "Note: 'cc' alias removed to avoid conflict with C compiler"
}

# Export the helper function
export -f claude_help