# Claude Code CLI Environment Configuration
# Generated by Ansible goldentooth.setup_claude_code role
# Source: goldentooth cluster node {{ inventory_hostname }}

# Ensure /usr/local/bin is in PATH for Claude Code wrapper scripts
if [[ ":$PATH:" != *":/usr/local/bin:"* ]]; then
    export PATH="/usr/local/bin:$PATH"
fi

# Claude Code CLI aliases
alias claude-code='npx --yes @anthropic-ai/claude-code-cli'
alias cc='npx --yes @anthropic-ai/claude-code-cli'

# Optional: Set Claude Code environment variables if needed
# export ANTHROPIC_API_KEY="your_api_key_here"  # Users should set this individually

# Helper function for Claude Code usage
claude_help() {
    echo "Claude Code CLI available commands:"
    echo "  claude-code [options] [command]  - Run Claude Code CLI"
    echo "  cc [options] [command]           - Short alias for Claude Code CLI"
    echo ""
    echo "Examples:"
    echo "  claude-code --help               - Show Claude Code help"
    echo "  cc chat                         - Start interactive chat"
    echo "  cc --version                    - Show Claude Code version"
    echo ""
    echo "Node: {{ inventory_hostname }} (Goldentooth cluster)"
}

# Export the helper function
export -f claude_help