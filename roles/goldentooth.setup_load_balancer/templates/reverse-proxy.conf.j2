error_log /var/log/nginx/error.log debug;
log_format yolo '$remote_addr - $target_host - $host - [$time_local] "$request" '
                '$status $body_bytes_sent "$http_referer" '
                '"$http_user_agent" "$http_x_forwarded_for"';

access_log /var/log/nginx/access.log yolo;

server {
  listen 8080;
  resolver 8.8.8.8 valid=10s;
  server_name ~^(?<subdomain>[^.]+)\.{{ cluster.cloudfront_origin_domain }}$;
  location / {
    set $target_host "${subdomain}.{{ cluster.domain }}";

    # DEBUG: log expanded values
    access_log /var/log/nginx/access.log combined if=$loggable;
    set $loggable 1;

    proxy_pass http://$target_host;
    proxy_set_header Host $target_host;
    proxy_set_header X-Application $subdomain;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_ssl_verify off;
  }
}

